<form action="/report" method="POST">
    <div>
        <label for="username">Username</label>
        <input type="text" name="username" id="username" placeholder="Username *" required="required">
    </div>
    <div>
        <label for="reason">Reason</label>
        <textarea name="reason" id="reason" cols="30" rows="5" placeholder="Reason *" required="required"></textarea>
        <input type='hidden' name='_csrf' value='<%= _csrf %>'>
    </div>
    <div>
        <label for="screenshots" class="keep">Proofs</label>
        <input type="file" name="screenshots" id="screenshots" placeholder="Proofs" accept="image/png, image/jpeg">
    </div>
    <button>Submit</button>
</form>